<launch>
	<!-- <param name="/use_sim_time" value="true"/> -->

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find furbot_gazebo)/worlds/furbot_2.world"/>
		<arg name="gui" value="true"/>
	</include>

	<!-- ros_control furbot launch file -->
	<include file="$(find furbot_control)/launch/furbot_control.launch" />

	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find furbot_description)/urdf/furbot.xacro'" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="furbot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model furbot" />
	<node name="image_view" pkg="image_view" type="image_view" args="image:=/furbot/camera_1/image_raw" />

	<!-- RVIZ VISUALIZATION -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find furbot_gazebo)/rviz/furbot.rviz" />

	<!-- LASER MERGER -->
	<node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
		<param name="destination_frame" value="chassis"/>
		<param name="scan_destination_topic" value="/furbot/laser/scan"/>
		<param name="laserscan_topics" value ="/furbot/laser/scan/front /furbot/laser/scan/rear" />
	</node>

	<!-- MAP LOADER -->

	<include file="$(find furbot_navigation)/launch/move_base_2.launch"/>
</launch>
