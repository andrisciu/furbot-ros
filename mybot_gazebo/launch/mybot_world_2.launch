<launch>
	<!-- <param name="/use_sim_time" value="true"/> -->

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find mybot_gazebo)/worlds/mybot_2.world"/>
		<arg name="gui" value="true"/>
	</include>

	<!-- ros_control mybot launch file -->
	<include file="$(find mybot_control)/launch/mybot_control.launch" />

	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find mybot_description)/urdf/mybot.xacro'" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model mybot" />
	<node name="image_view" pkg="image_view" type="image_view" args="image:=/mybot/camera_1/image_raw" />

	<!-- RVIZ VISUALIZATION -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find mybot_gazebo)/rviz/mybot.rviz" />

	<!-- LASER MERGER -->
	<node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
		<param name="destination_frame" value="chassis"/>
		<param name="scan_destination_topic" value="/mybot/laser/scan"/>
		<param name="laserscan_topics" value ="/mybot/laser/scan/front /mybot/laser/scan/rear" />
	</node>

</launch>
